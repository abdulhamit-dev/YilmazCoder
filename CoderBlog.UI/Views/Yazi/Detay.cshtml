@using CoderBlog.Entities.Dtos
@model YaziDto

@{
    ViewData["Title"] = "Yazi Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    img{
        width:100%;
        height:auto;
        margin:auto;
    }

    iframe {
        width: 100%;
        height: 500px;
    }
</style>
<script src="https://cdn.tiny.cloud/1/11phgs80o251qv8pzel7b38mek84h0hmxbqshck6999e6z05/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>  

<div class="container-sm" style="max-width:1000px">
    <div class="row">
        <div class="col-md-12">
            <div class="card" style="padding:20px">
                <img src="~/Resources/YaziKapakResim/@Model.YaziKapakResim" style="width:60%;height:auto;margin:auto" />
                <hr />
                <div class="text-center" style="font-size:xx-large"><strong>@Model.YaziBaslik</strong></div>
                <div class="card-body" style="padding:20px">
                    @Html.Raw(Model.YaziIcerik)
                   
                </div>
            </div>
        </div>
    </div>
</div>


