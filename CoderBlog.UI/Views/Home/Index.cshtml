@{
    ViewData["Title"] = "Anasayfa";
}
@using CoderBlog.Entities.Dtos
@using CoderBlog.Entities
@model List<YaziDto>

<style>
    a {
        text-decoration:unset;
        color:black
    }
 
</style>
<div style="padding:10px">

<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-md-6 col-sm-12 col-lg-3">
        <div class="card shadow-sm" style="margin:5px;padding:1px">
            @if (!string.IsNullOrEmpty(item.YaziKapakResim))
            {
            <a href="#"><img src="~/Resources/YaziKapakResim/@item.YaziKapakResim" style="width:100%;height:auto;" /></a>
            }
            <div class="card-body">
                <div class="d-flex justify-content-start">
                    <div>

                        <img src="https://api.yilmazcoder.online/resources/profilResmi/@item.KullaniciResmi" style="width:35px;height:auto;border-radius:50%;float:left" />
                    </div>
                    <div class="p-1 bd-highlight"><a href="#"><strong> @item.KullaniciAdi</strong></a> </div>
                </div>
                <br />
                <strong><a href="/yazi/detay?yaziId=@item.Id">@item.YaziBaslik</a> </strong>
                <hr />
                <div class="d-flex justify-content-evenly">
                    <div class="p-2 bd-highlight"><strong><i class="far fa-calendar-alt"></i> @item.YaziTarih.ToLongDateString()</strong></div>
                    <div class="p-2 bd-highlight"><span style="float:right"><a href="#"><i class="fas fa-layer-group"></i> @item.KategoriAdi</a> </span></div>
                </div>
            </div>
        </div>
    </div>
    }
</div>
</div>